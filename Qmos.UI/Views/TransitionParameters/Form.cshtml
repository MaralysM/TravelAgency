@{
    @model Qmos.UI.ViewModels.TransitionParametersViewModel
    ViewData["Title"] = "Transition parameters form";
    ViewData["Root"] = "Transition parameters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/plugins/sweetalert/sweetalert.css">
<link rel="stylesheet" href="~/css/plugins/toastr/toastr.min.css" />
<partial name="_HeaderDetailPartial" view-data="ViewData" />

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row justify-content-md-center">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group row text-left">
                                <div class="col-lg-12">
                                    <span class="text-danger"> *</span><span>
                                        Required fields
                                    </span>
                                </div>
                            </div>
                            <form asp-action="Post" role="form" method="post">
                                <input type="hidden" asp-for="Header.Id" />
                                <input type="hidden" asp-for="Detail.Id" />
                                <div class="row">
                                    <div class="col-md-4">
                                        <label>Time Transition</label><span class="text-danger"> *</span>
                                        <div class="input-group " data-autoclose="true">
                                            <input type="text" class="form-control time" asp-for="Detail.TimeTransition" placeholder="Time Transition">
                                            <span class="input-group-addon">
                                                <span class="fa fa-clock-o"></span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 form-group">
                                        <label>Order</label><span class="text-danger"> *</span>
                                        <input asp-for="Detail.OrderTransition" type="number" placeholder="Order" class="form-control">
                                    </div>
                                    <div class="col-lg-4 form-group">
                                        <label>Chart</label><span class="text-danger"> *</span>
                                        <select class="form-control m-b chosen-select" asp-for="Detail.IdElement" asp-items="@(Model.Detail.ElementList)">
                                            <option value="0">Select One Option</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group row text-center">
                                    <div class="col-lg-12">
                                        <a asp-action="Index" class="btn btn-white"><i class="fa fa-arrow-left"></i> Back</a>
                                        <button id="btn-save" class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <table class="table table-striped table-bordered table-hover dataTables" id="table">
                                    <thead>
                                        <tr>
                                            <th>Time Transition</th>
                                            <th>Order Transition</th>
                                            <th>Chart</th>
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.List)
                                        {
                                            <tr>
                                                <td class="text-center">@item.time_transition</td>
                                                <td> @item.order_transition</td>
                                                <td> @item.element_name</td>
                                                <td class="text-center">
                                                    <div class="btn-group">
                                                        <a data-id="@item.Id" class="btn btn-primary btnEditDetail"><i class="fa fa-edit"></i></a>
                                                        <a data-id="@item.Id" class="btn btn-danger delete">
                                                            <i class="fa fa-remove"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script>
        formatearDataTableOriginal("#table", "@ViewData["Title"]", [0, 1], null);
        $('#table tbody').on('click', '.delete', function () {
            eliminarRegistro(".delete", "data-id", "@Url.Action("RemoveDetail", "TransitionParameters")", '#table', $(this));
        });

        $(document).ready(function () {

            $('.time').inputmask("hh:mm:ss", {
                placeholder: "hh:mm:ss",
                insertMode: false,
                showMaskOnHover: false
             });

             $('form').submit(function () {
                if ($('#Detail_TimeTransition').val() == "" || $('#Detail_OrderTransition').val() == 0 || $('#Detail_IdElement').val() == 0) {
                    toastr.error("Enter the fields marked as required");
                    return false;
                }
                return true;
            });

         $('.btnEditDetail').on('click', function () {
                $.ajax({
                url: '@Url.Action("GetUpdateDetail", "TransitionParameters")',
                method: "GET",
                data: { id : $(this).attr('data-id') },
                    success: function (retorno) {                                            
                    $('#Header_Id').val(retorno.id_transition_parameters_header);
                    $('#Detail_Id').val(retorno.id);
                    $('#Detail_TimeTransition').val(retorno.time_transition);
                    $('#Detail.TimeTransition').trigger("chosen:updated");
                    $('#Detail_OrderTransition').val(retorno.order_transition);
                    $('#Detail_IdElement').val(retorno.id_element);
                },
                error: function (response) {
                    toastr.error("There is a problem: " + response.responseText);
                }
                });
            });
        });

    </script>
}