@model Qmos.UI.ViewModels.UpdateTimeViewModel
@using Microsoft.AspNetCore.Mvc;
@{
    ViewData["Title"] = "Scrap Ton Per Hour (POn)";
    ViewData["Root"] = "Dashboards";
}

<link href="~/css/plugins/chartjs/Chart.min.css" rel="stylesheet" />
<link href="~/css/plugins/toastr/toastr.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/plugins/daterangepicker/daterangepicker.css" />
<link href="~/css/plugins/datapicker/datepicker3.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-chosen.css" />


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-6">
        <h2>@(!string.IsNullOrEmpty((string)ViewData["Root"]) ? @ViewData["Title"].ToString() : "")</h2>
    </div>
</div>

<div class="col-lg-12" data-rolable-url="dash-ScrapTonPerHour" data-rolable-name="Scrap Ton Per Hour (POn)">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5 style=" font-size: 150%;">@DateTime.Now.ToString("MM/dd/yyyy HH:mm")</h5>
            <div class="ibox-tools">
                <div onLoad="carga()" class="font-bold" style=" font-size: 150%;">
                    <span id="hora">00</span>:<span id="minuto">00</span>:<span id="segundo">01</span>
                </div>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-lg-3 col-md-4 stat-percent">
                    <div class="ibox ">
                        <div class=" text-center">
                            <h1 class="no-margins font-bold" style="color:red;" id="Average">0.00</h1>
                            <small>Average of TonHour(Pon)</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <canvas id="chartScrapTonPerHour" height="157" width="600"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/plugins/toastr/toastr.min.js"></script>
    <script src="~/js/plugins/chartjs/Chart.bundle.min.js"></script>
    <script src="~/js/plugins/chartjs/Chart.min.js"></script>
    <script src="~/js/plugins/chartjs/chartjs-plugin-labels.js"></script>
    <script src="~/js/plugins/chartjs/chartjs-plugin-datalabels.js"></script>
    <script src="~/js/plugins/moment/moment.min.js"></script>
    <script src="~/js/plugins/daterangepicker/daterangepicker.min.js"></script>
    <script src="~/js/Qmos/dashboard.js"></script>
    <script src="~/lib/plugins/chosen/chosen.jquery.js"></script>

    <script>
        $(document).ready(function () {
            GetScrapTonPerHour();
            //Every X seconds (XXXX milliseconds) the refresh function will be executed
            if (@Model.TIMEMILLISECONDS > 0) {
            var milliseconds = @Model.TIMEMILLISECONDS;
                setTimeout(refresh, milliseconds);
                }
        });
    </script>
}
