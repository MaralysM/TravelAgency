@using Microsoft.AspNetCore.Http;
    <nav class="navbar navbar-static-top" role="navigation" style="position:relative;margin-bottom: 0;padding-top:20px;height:100px;background-color:#105162;">
        <div class="navbar-header" style="display:inline">
            <img alt="image" style="position:absolute;top:0;right:0" height="100" class="img-circle" src="~/images/banner.png" />
            <a style="position: relative;" class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
            @*<a style="margin-left:50px;position:absolute">
                <img width="180" src="../images/logo-lince-blanco.png" />
            </a>*@
        </div>
        <div class="text-right" style="top:0;right:0;position:absolute;margin-top:25px" >
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-8">
                        <span class="clear">
                            <span class="block m-t-xs">
                                <strong style="color:#FFFFFF" class="font-bold">@Context.Session.GetString("UserFullName")</strong>
                            </span>
                            <span style="color:#FFFFFF" class="text-muted text-xs block">@Context.Session.GetString("UserRole") @*<b class="caret"></b>*@</span>
                        </span>
                    </div>
                    <div class="col-lg-4">
                        <img alt="image" class="img-circle" src="~/images/profile_small.jpg" style="margin-right:20px"/>
                    </div>
                </div>
            </div>
        </div>
    </nav>