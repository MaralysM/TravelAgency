@using Microsoft.AspNetCore.Http;
@{
    @model TravelAgency.UI.ViewModels.TravellersViewModel
    @if (Model.ID_Travellers != 0)
    {
        ViewData["Title"] = "Modificar Viajero" +  ViewData["Customer"];
    }
    else
    {
        ViewData["Title"] = "Crear Viajero";
    }

    ViewData["Root"] = "Viajeros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/plugins/sweetalert/sweetalert.css">
<link rel="stylesheet" href="~/css/plugins/dataTables/datatables.min.css" />
<link rel="stylesheet" href="~/css/plugins/toastr/toastr.min.css" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-chosen.css" />
<partial name="_HeaderDetailPartial" view-data="ViewData" />

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row justify-content-md-center">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group row text-left">
                                <div class="col-lg-12">
                                    <span class="text-danger"> *</span><span>
                                        Campos requeridos
                                    </span>
                                </div>
                            </div>
                            <form asp-action="Post" role="form" method="post">
                                <input type="hidden" asp-for="@Model.ID_Travellers" />

                                <div class="row">
                                    <div class="form-group col-lg-3 col-md-3">
                                        <label>
                                            Primer Nombre
                                        </label><span class="text-danger"> *</span>
                                        <input asp-for="@Model.TX_FirstName" type="text" placeholder="Primer Nombre" class="form-control">
                                    </div>
                                    <div class="form-group col-lg-3 col-md-3">
                                        <label>
                                            Segundo Nombre
                                        </label>
                                        <input asp-for="@Model.TX_SecondName" type="text" placeholder="Segundo Nombre" class="form-control">
                                    </div>
                                    <div class="form-group col-lg-3 col-md-3">
                                        <label>
                                            Primer Apellido
                                        </label><span class="text-danger"> *</span>
                                        <input asp-for="@Model.TX_LastName" type="text" placeholder="Primer Apellido" class="form-control">
                                    </div>
                                    <div class="form-group col-lg-3 col-md-3">
                                        <label>
                                            Segundo Apellido
                                        </label>
                                        <input asp-for="@Model.TX_SecondLastName" type="text" placeholder="Segundo Apellido" class="form-control">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-lg-6 col-md-6">
                                        <label> Cédula</label><span class="text-danger"> *</span>
                                        <input asp-for="@Model.TX_IdentificationCard" type="text" placeholder="Cédula" class="form-control">
                                    </div>
                                    <div class="form-group col-lg-6 col-md-6">
                                        <label>Número Telefónico</label><span class="text-danger"> *</span>
                                        <input asp-for="@Model.TX_Phone" type="text" placeholder="Número Telefónico" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Dirección</label><span class="text-danger"> *</span>
                                    <input asp-for="@Model.TX_Address" type="text" placeholder="Dirección" class="form-control">
                                </div>
                                <div class="hr-line-dashed"></div>
                                <div class="form-group row text-center">
                                    <div class="col-lg-12">
                                        <a asp-action="Index" class="btn btn-white"><i class="fa fa-arrow-left"></i> Regresar</a>
                                        <button id="btn-save" class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Guardar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="~/js/plugins/dataTables/datatables.min.js"></script>
    <script src="~/js/plugins/dataTables/dataTablesCustom.js"></script>
    <script src="~/js/plugins/toastr/toastr.min.js"></script>
    <script>

        $(document).ready(function () {
            $('#btn-save').on('click', function () {

                if ($("#TX_FirstName").val() == "") {
                    toastr.error(`Ingrese el primer nombre`);
                    return false
                }

                if ($("#TX_LastName").val() == "") {
                    toastr.error(`Ingrese el primer apellido`);
                    return false
                }

                if ($("#TX_IdentificationCard").val() == "") {
                    toastr.error(`Ingrese la cédula`);
                    return false
                }
                if ($("#TX_Phone").val() == "") {
                    toastr.error(`Ingrese el teléfono`);
                    return false
                }

                if ($("#TX_Address").val() == "") {
                    toastr.error(`Ingrese el lugar de origen`);
                    return false
                }

            })
        })

    </script>
}